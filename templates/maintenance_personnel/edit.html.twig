{% extends 'base.html.twig' %}

{% block title %} Матрица работ r-го обслуживающего персонала {% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.qualityfactor) }}
        {{ form_row(form.relation) }}
        {{ form_row(form.submit) }}
    {{ form_end(form, {'render_rest': false}) }}
    

    <h1>Матрица работ {{ maintenance_Personnel.getId() }}-ого обслуживающего персонала</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Агрегат</td>
                <td>-2</td>
                <td>-1</td>
                <td>0</td>
                <td>1</td>
                <td>2</td>
                <td>3</td>
                <td>Количество выполненных работ</td>
            </tr>
        </thead>
        <tbody>
           {% for qFWP in maintenance_Personnel.getRelationQFWP() %}
                <tr>
                        <td>
                        {{ qFWP.getRelation().aggregateWTO }}
                        </td>
                        <td>
                        {{ qFWP.qualityFactor }}
                        </td>
                        <td>
                        {{ qFWP.qualityFactor1 }}
                        </td>
                        <td>
                        {{ qFWP.qualityFactor2 }}
                        </td>
                        <td>
                        {{ qFWP.qualityFactor3 }}
                        </td>
                        <td>
                        {{ qFWP.qualityFactor4 }}
                        </td>
                        <td>
                        {{ qFWP.qualityFactor5 }}
                        </td>
                        <td>
                        {{ qFWP.qualityFactor + qFWP.qualityFactor1 + qFWP.qualityFactor2 + qFWP.qualityFactor3 + qFWP.qualityFactor4 + qFWP.qualityFactor5 }}
                        </td>
                    </tr>
            {% else %}
                <tr>
                    <td colspan="2">Нет данных</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('maintenance_personnel_index') }}">Назад</a>

    {{ include('maintenance_personnel/_delete_form.html.twig') }}
{% endblock %}
